{
  "manifest_version": 3,
  "name": "디지털 메모장",
  "description": "간단한 메모를 저장하고 수정, 삭제할 수 있는 확장 프로그램입니다.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"]
}